{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./src/dist/js",
    "rootDir": "./src/ts",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/ts/*"]
    },
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/ts/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
} 